<h1>Edit Post</h1>
<%= form_for @product do |f| %>
	<p>
	<%= f.label :name %><br />
	<%= f.text_field :name%>
	</p>
	<p>
	<%= f.label :description %><br />
	<%= f.text_area :description%>
	</p>
	<p>
	<%= f.label :price %><br />
	<%= f.text_field :price %>
	</p>

	<div>
	  <%= hidden_field_tag "product[otype_ids][]" , nil %>
		<% Otype.all.each do |otype| %>
		
		<%=  check_box_tag "product[otype_ids][]", otype.id, @product.otype_ids.include?(otype.id) %>
			<%= otype.name %>
		<% end %>
	</div>
	

	<p>
	<%= f.submit "Update Post" %><br />
	</p>
<% end %>